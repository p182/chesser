<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GameFragment"
    android:id="@+id/layout1"
    android:clickable="false"
    android:background="#b6ddd7">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/board"
        android:src="@drawable/board3"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrate"
        android:id="@+id/vibrateCB"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="setVibrate" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/soundCB"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/vibrateCB"
        android:layout_toStartOf="@+id/vibrateCB"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:id="@+id/turnNotifier"
        android:layout_above="@+id/board"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#002e25"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:background="@color/secondary_text_default_material_light"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/rook"
            android:src="@drawable/nonselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/knight"
            android:src="@drawable/nonselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bishop"
            android:src="@drawable/nonselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/queen"
            android:src="@drawable/nonselected" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton7"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:onClick="onNewPieceChosen" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible"
        android:id="@+id/gameFinishedLayout"
        android:background="@color/bright_foreground_disabled_material_dark"
        android:layout_alignTop="@+id/turnNotifier"
        android:layout_alignParentBottom="true">

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/closeGameFinished"
            android:layout_gravity="center_horizontal|end"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:tint="#007a9f"
            android:onClick="gameFinishedCloseOnClick"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/gameFinishedTitle"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/gameFinishedText"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            android:id="@+id/exitGameFinished"
            android:layout_gravity="center_horizontal"
            android:onClick="checkmateExitOnClick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ebfff2"
        android:touchscreenBlocksFocus="false"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" >

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton3"
            android:layout_gravity="center_horizontal|end"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:tint="#007a9f"
            android:onClick="closeHelp"
            android:focusable="false" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/info_game"
                android:textColor="#00363b"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView7"
                android:autoLink="web"/>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:text="Roni Harel 2015" />
    </LinearLayout>

</RelativeLayout>



