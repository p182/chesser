<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.dehaas.chesser.Welcome"
    android:longClickable="true"
    android:background="#b6ddd7">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Join A Game"
        android:id="@+id/button"
        android:onClick="buttonOnClick2"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Host a Game"
        android:id="@+id/button2"
        android:onClick="buttonOnClick3"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_marginTop="102dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chesser"
        android:id="@+id/textView3"
        android:textColor="#002e25"
        android:textSize="80dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-light"
        android:background="#b3ffffff"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
