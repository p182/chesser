<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.dehaas.chesser.Welcome"
    android:longClickable="true"
    android:background="#b6ddd7">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chesser"
        android:id="@+id/textView3"
        android:textColor="#002e25"
        android:textSize="85sp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-light"
        android:background="#b3ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Join A Game"
        android:id="@+id/button"
        android:onClick="buttonOnClick2"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        android:fontFamily="sans-serif-light"
        android:textSize="23sp"
        android:stateListAnimator="@null"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Host a Game"
        android:id="@+id/button2"
        android:onClick="buttonOnClick3"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        android:fontFamily="sans-serif-light"
        android:textSize="23sp"
        android:stateListAnimator="@null"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_info_black_48dp"
        android:onClick="showInfo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ebfff2"
        android:touchscreenBlocksFocus="false"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_horizontal|end"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:tint="@color/accent_material_light"
            android:onClick="closeInfo"
            android:focusable="false" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/info_welcome"
                android:textColor="#002e25"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView5" />
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="Roni Harel 2015" />

    </LinearLayout>

</RelativeLayout>
