<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GameFragment"
    android:id="@+id/layout1"
    android:clickable="false"
    android:background="#b6ddd7">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/board"
        android:src="@drawable/board3"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrate"
        android:id="@+id/vibrateCB"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="setVibrate" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/soundCB"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/vibrateCB"
        android:layout_toStartOf="@+id/vibrateCB"
        android:visibility="gone" />
<!--
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/turnNotifier"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />
-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:id="@+id/turnNotifier"
        android:layout_above="@+id/board"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#002e25"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:onClick="backButton"
        android:background="@drawable/custombutton" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:background="@color/secondary_text_default_material_light"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/rook"
            android:src="@drawable/nonselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/knight"
            android:src="@drawable/nonselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bishop"
            android:src="@drawable/nonselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/queen"
            android:src="@drawable/nonselected" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton7"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:onClick="onNewPieceChossen" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible"
        android:id="@+id/wonLayout"
        android:background="@color/bright_foreground_disabled_material_dark"
        android:layout_alignTop="@+id/turnNotifier">

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/closeCheckmateWon"
            android:layout_gravity="center_horizontal|end"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:tint="@color/accent_material_light"
            android:onClick="checkmateWonCloseOnClick"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="checkmate!"
            android:id="@+id/checkmate_won"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You have won."
            android:id="@+id/won"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            android:id="@+id/exitCheckmateWon"
            android:layout_gravity="center_horizontal"
            android:onClick="checkmateExitOnClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible"
        android:id="@+id/lostLayout"
        android:background="@color/bright_foreground_disabled_material_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/turnNotifier">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/closeCheckmateLost"
            android:layout_gravity="center_horizontal|end"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tint="@color/accent_material_light"
            android:onClick="checkmateLostCloseOnClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="checkmate..."
            android:id="@+id/checkmate_lost"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You have lost."
            android:id="@+id/lost"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            android:id="@+id/exitCheckmateLost"
            android:layout_gravity="center_horizontal"
            android:onClick="checkmateExitOnClick" />

    </LinearLayout>

</RelativeLayout>



